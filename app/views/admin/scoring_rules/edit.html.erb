<h1>Edit Scoring Rule</h1>

<%= form_with model: [:admin, @scoring_rule], local: true do |form| %>
  <div>
    <%= form.label :age_min %>
    <%= form.number_field :age_min %>
  </div>
  <div>
    <%= form.label :age_max %>
    <%= form.number_field :age_max %>
  </div>
  <div>
    <%= form.label :q1 %>
    <%= form.number_field :q1 %>
  </div>
  <div>
    <%= form.label :q2 %>
    <%= form.number_field :q2 %>
  </div>
  <div>
    <%= form.label :q3 %>
    <%= form.number_field :q3 %>
  </div>
  <div>
    <%= form.label :threshold %>
    <%= form.number_field :threshold %>
  </div>
  <div>
    <%= form.submit 'Update' %>
  </div>
<% end %>

<%= link_to 'Back to Scoring Rules', admin_scoring_rules_path %>
